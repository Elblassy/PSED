<com.ramotion.foldingcell.FoldingCell xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:folding-cell="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/folding_cell"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    folding-cell:additionalFlipsCount="2"
    folding-cell:animationDuration="900"
    folding-cell:cameraHeight="10"
    tools:context=".activities.Projects">

    <FrameLayout
        android:id="@+id/cell_content_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="361dp"
            android:background="@drawable/border"
            android:backgroundTint="#b6b6c2"
            android:backgroundTintMode="src_in"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/content_image_cell"
                android:layout_width="match_parent"
                android:layout_height="161dp"
                android:scaleType="centerCrop"
                android:src="@drawable/projects"
                />

           <android.support.v7.widget.RecyclerView
               android:id="@+id/list_item_cell"
               android:layout_width="wrap_content"
               android:layout_height="200dp">

           </android.support.v7.widget.RecyclerView>

        </LinearLayout>
    </FrameLayout>


    <FrameLayout
        android:id="@+id/cell_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"

        >
        <ImageView
            android:id="@+id/title_image_cell"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:scaleType="centerCrop"
            android:src="@drawable/computer"
            android:background="@drawable/rectangel"/>
    </FrameLayout>
</com.ramotion.foldingcell.FoldingCell>

