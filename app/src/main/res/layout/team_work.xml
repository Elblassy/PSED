<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipToPadding="false"
    android:clipChildren="false"
    >

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp" >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="4dp"
        app:cardBackgroundColor="@color/gold"
        app:cardCornerRadius="12dp"
        android:dividerHeight="-10.0px"
        app:cardMaxElevation="10dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:cardElevation="8dp"
        app:cardPreventCornerOverlap="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/background_of_teamwork"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/bgteam8"/>

            <TextView
                android:id="@+id/title_of_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:alpha=".8"
                android:text="DESIGN"
                android:textSize="90sp" />


            <TextView
                android:id="@+id/name_of_leader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Mohamed Nabil"
                android:textColor="#000000"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dis_of_leader"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_of_leader"
                android:paddingLeft="20dp"
                android:text="fnaslifas fsalfnsafasb filasbfsailfbfaslifbs aflsa"
                android:textColor="#000000"
                android:textSize="20sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
    </RelativeLayout>
    <ImageView
        android:id="@+id/leader"
        android:layout_width="120dp"
        android:layout_height="260dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:layout_marginRight="20dp"
        android:src="@drawable/lobnasamileadersec" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/team_work"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/container"
        android:padding="5dp">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>