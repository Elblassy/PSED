<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:dividerHeight="-10.0px"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:cardMaxElevation="10dp"
        app:cardPreventCornerOverlap="false">



        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                app:cardCornerRadius="12dp"
                >

                <ImageView
                    android:id="@+id/background_of_teamwork"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/bgteam8" />

                <TextView
                    android:id="@+id/title_of_team"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha=".8"
                    android:layout_gravity="bottom"
                    android:text="DESIGN"
                    android:textSize="60dp" />

                <TextView
                    android:id="@+id/name_of_leader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Mohamed Nabil"
                    android:textColor="#fff"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dis_of_leader"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="50dp"
                    android:text="@string/dr_heba"
                    android:textColor="#ffff"
                    android:textSize="14dp" />

            </android.support.v7.widget.CardView>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/leader"
                android:layout_width="165dp"
                android:layout_height="255dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:src="@drawable/drheba" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/team_work"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/leader"
                android:padding="5dp">

            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>